<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btm_sheet_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_schedule_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Active Schedule"
        android:drawableStart="@drawable/ic_switch"
        android:drawablePadding="10dp"
        android:fontFamily="@font/open_sans"
        android:textSize="15sp"
        android:textColor="@color/colorFontDark"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/line_under_schedule_type"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLineDark"
        app:layout_constraintTop_toBottomOf="@id/txt_schedule_type"/>

    <TextView
        android:id="@+id/txt_add_weekly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_add_weekly"
        android:drawablePadding="10dp"
        android:fontFamily="@font/open_sans"
        android:textSize="15sp"
        android:textColor="@color/colorFontDark"
        android:padding="20dp"
        android:text="Create new weekly schedule"

        app:layout_constraintTop_toBottomOf="@id/txt_schedule_type" />

    <View
        android:id="@+id/line_under_add_weekly"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLineDark"
        app:layout_constraintTop_toBottomOf="@id/txt_add_weekly"/>

    <TextView
        android:id="@+id/txt_load_weekly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Plans"
        android:drawableStart="@drawable/ic_hitory"
        android:drawablePadding="10dp"
        android:fontFamily="@font/open_sans"
        android:textSize="15sp"
        android:textColor="@color/colorFontDark"
        app:layout_constraintTop_toBottomOf="@id/txt_add_weekly"/>

    <View
        android:id="@+id/line_under_history"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLineDark"
        app:layout_constraintTop_toBottomOf="@id/txt_load_weekly"/>
    <TextView
        android:id="@+id/txt_show_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="My Activities"
        android:drawableStart="@drawable/ic_task"
        android:drawablePadding="10dp"
        android:fontFamily="@font/open_sans"
        android:textSize="15sp"
        android:textColor="@color/colorFontDark"
        app:layout_constraintTop_toBottomOf="@id/txt_load_weekly"/>

</androidx.constraintlayout.widget.ConstraintLayout>