<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:clickable="true"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardCornerRadius="8dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_zzz_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/img_zzz"
            android:text="12:00"
            app:layout_constraintTop_toTopOf="@id/img_zzz"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@id/img_zzz"/>

        <ImageView
            android:id="@+id/img_zzz"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:src="@drawable/ic_sleep"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txt_zzz_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/img_zzz"
            android:text="12:00"
            app:layout_constraintTop_toTopOf="@id/img_zzz"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@id/img_zzz"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>